<%= form_for(@feedback) do |f| %>


  <div class="field">
    Your <%= f.label :name, "Name" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %>
    (Your Email will not be shown)<br/>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :body, "Comment" %><br />
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit "POST COMMENT" %>
  </div>
<% end %>
